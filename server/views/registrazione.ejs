                    <input class="form-control" name="email" id="email" type="email" placeholder="esempio@indirizzo.it" autocomplete="off" data-msg="Inserisci la tua email"  required>
                  </div>

                  <div class="form-group col-sm-6">
                    <label class="form-label" for="telefono"> Telefono</label>
                    <input class="form-control" name="telefono" id="telefono" type="tel" placeholder="(+/00)PPLLLNNNNNNN" pattern="((((\+|00)[1-9]{2})|0)?([1-9]{2,3}))([0-9]{6,10})" autocomplete="off" data-msg="Inserisci il tuo numero di telefono">
                  </div>
                </div>

                <div class="form-group" style="margin-bottom: 0.2em">
                  <label class="form-label" for="password"> Password *</label>
                  <input class="form-control" name="password" id="password" placeholder="Password" type="password"
                    title="Almeno 8 caratteri di cui di una lettera maiuscola un numero."
                    pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9]).{8,}$" size="32" maxlength="40" data-msg="Inserisci la tua password" required>
                  <div id="password-strength-status">&nbsp</div>
                </div>

                <div class="form-group mb-4">
                  <label class="form-label" for="password2"> Conferma la tua password *</label>
                  <input class="form-control" name="password2" id="password2" placeholder="Password" type="password" data-msg="Inserisci di nuovo la password" required>
                  <div>&nbsp</div>
                </div>
