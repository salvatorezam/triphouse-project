<!DOCTYPE html>
<html lang="it">
  <head>
    <% include partials/head.ejs %>
  </head>
  <body style="padding-top: 72px;">
    <% include partials/header.ejs %>
    <section class="py-5">
      <div class="container">
        <!-- Breadcrumbs -->
        <ol class="breadcrumb pl-0  justify-content-start">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item active">I tuoi viaggi   </li>
        </ol>
        
        <div class="row">
          <h1 class="col-12 hero-heading mb-4">Prossimi viaggi</h1>
          <% if(data.dataNC.length == 0) { %>
            <div class="col-xl-3 col-md-4 col-sm-6 mb-5">
              <h3 class="col-12 hero-heading mb-2">Nessun viaggio in programma</h3>
              <img src="https://d19m59y37dris4.cloudfront.net/directory/1-5/img/illustration/undraw_celebration_0jvk.svg" alt="" style="width: 300px;">
            </div>
          <% } else { %>
          <!-- place item-->
            <% data.dataNC.forEach(element => { %>
            <div class="col-xl-3 col-md-4 col-sm-6 mb-5">
              <div class="card h-100 border-0 shadow">
                <div class="card-img-top overflow-hidden"><a href="/profiloUtenteControl/finestraPrenotazioneEffettuata?id=<%= element.ID_PREN %>"><img class="img-fluid" src="../images/uploads/<%= element.foto_0 %>" alt="Modern, Well-Appointed Room"/></a></div>
                <div class="card-body d-flex align-items-center">
                  <div class="w-100">
                    <p class="subtitle font-weight-normal text-sm mb-2"><%= element.data_inizio %></p>
                    <h6 class="card-title"><a class="text-decoration-none text-dark" href="/profiloUtenteControl/finestraPrenotazioneEffettuata?id=<%= element.ID_PREN %>"><%= element.titolo %></a></h6>
                    <div class="d-flex card-subtitle mb-3">
                      <p class="flex-grow-1 mb-0 text-muted text-sm"><%= element.citta %></p>
                    </div>
                    <span class="text-primary text-sm text-uppercase">
                      <i class="fa fa-check fa-fw mr-2"> </i><%= element.stato_prenotazione %>
                    </span>
                  </div>
                </div>
              </div>
            </div>
            <% });} %>
        </div>
        <div class="row">
          <h2 class="col-12 hero-heading mb-4">Viaggi passati</h2>
          <% if(data.dataC.length == 0) { %>
            <div class="col-xl-3 col-md-4 col-sm-6 mb-5">
              <h3 class="col-12 hero-heading mb-2">Nessun viaggio passato</h3>
              <img src="https://d19m59y37dris4.cloudfront.net/directory/1-5/img/illustration/undraw_celebration_0jvk.svg" alt="" style="width: 300px;">
            </div>
          <% } else { %>
          <!-- place item-->
            <% data.dataC.forEach(element => { %>
            <div class="col-xl-3 col-md-4 col-sm-6 mb-5" data-marker-id="59c0c8e33b1527bfe2abaf92">
              <div class="card h-100 border-0 shadow">
                <div class="card-img-top overflow-hidden"><a href="/profiloUtenteControl/finestraPrenotazioneEffettuata?id=<%= element.ID_PREN %>"><img class="img-fluid" src="../images/uploads/<%= element.foto_0 %>" alt="Modern, Well-Appointed Room"/></a></div>
                <div class="card-body d-flex align-items-center">
                  <div class="w-100">
                    <p class="subtitle font-weight-normal text-sm mb-2"><%= element.data_inizio %></p>
                    <h6 class="card-title"><a class="text-decoration-none text-dark" href="/profiloUtenteControl/finestraPrenotazioneEffettuata?id=<%= element.ID_PREN %>"><%= element.titolo %></a></h6>
                    <div class="d-flex card-subtitle mb-3">
                      <p class="flex-grow-1 mb-0 text-muted text-sm"><%= element.citta %></p>
                    </div>
                    <span class="text-primary text-sm text-uppercase">
                      <i class="fa fa-check fa-fw mr-2"> </i>Conclusa
                    </span>
                  </div>
                </div>
              </div>
            </div>
            <% });} %>
        </div>
      </div>
    </section>
    <!-- Footer-->
    <% include partials/footer.ejs %>
    <!-- JavaScript files-->
    <% include partials/scriptFooter.ejs %>

    <!-- jQuery>
    <script>
      $(document).ready(function() {

      })
    </script -->
  </body>
</html>